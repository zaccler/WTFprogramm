<Page x:Class="WTFprogramm.Task3Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Задача 3">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
            <TextBlock Text="Введите координаты точек на прямой (через пробел). 
                             Программа найдёт точку с минимальной суммой расстояний и саму сумму." 
                       TextWrapping="Wrap" Margin="10"/>
            <TextBox x:Name="InputCoordinates" Width="300" Height="30" Margin="10"/>
            <Button Content="Найти точку" Width="200" Click="Calculate_Click"/>
            <TextBlock x:Name="ResultTextBlock" Margin="10" FontSize="14"/>
        </StackPanel>
    </Grid>
</Page>
