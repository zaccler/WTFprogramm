<Page x:Class="WTFprogramm.Task1Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Задача 1">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBlock Text="Введите целое число от -999 до 999 и получите его словесное описание." 
                       TextWrapping="Wrap" Margin="10"/>
            <TextBox x:Name="InputNumber" Width="200" Height="30" Margin="10"/>
            <Button Content="Рассчитать" Width="100" Click="Calculate_Click"/>
            <TextBlock x:Name="ResultTextBlock" Margin="10"/>
        </StackPanel>
    </Grid>
</Page>
