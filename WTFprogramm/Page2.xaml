<Page x:Class="WTFprogramm.Task2Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Задача 2">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
            <TextBlock Text="Введите строку, состоящую из русских слов, разделённых пробелами. 
                             Программа найдёт длину самого длинного слова." 
                       TextWrapping="Wrap" Margin="10"/>
            <TextBox x:Name="InputString" Width="300" Height="30" Margin="10"/>
            <Button Content="Найти самое длинное слово" Width="200" Click="Calculate_Click"/>
            <TextBlock x:Name="ResultTextBlock" Margin="10" FontSize="14"/>
        </StackPanel>
    </Grid>
</Page>
